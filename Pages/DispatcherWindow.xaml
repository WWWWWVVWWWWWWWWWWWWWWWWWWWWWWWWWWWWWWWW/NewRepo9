<Page x:Class="WpfApp5.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="LightGray" >

        <ListView Name="AppointmentsList" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Психолог" Width="150" />
                    <GridViewColumn Header="Время" Width="100" />
                    <GridViewColumn Header="Статус" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Добавить" Name="OnAddAppointment" HorizontalAlignment="Left" Margin="10,380,0,10" Width="100" Click="OnAddAppointment_Click" />
        <Button Content="Изменить" Name="OnEditAppointmen" HorizontalAlignment="Center" Margin="0,380,0,10" Width="100" Click="OnEditAppointmen_Click" />
        <Button Content="Удалить" Name="OnDeleteAppointment" HorizontalAlignment="Right" Margin="0,380,10,10" Width="100" Click="OnDeleteAppointment_Click" />

    </Grid>
</Page>
