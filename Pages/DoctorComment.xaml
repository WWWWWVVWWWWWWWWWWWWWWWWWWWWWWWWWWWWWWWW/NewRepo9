<Page x:Class="WpfApp5.Pages.DoctorComment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="DoctorComment">

    <Grid Background="White">
        
            <TextBlock Text="Комментарий" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0" />
            <TextBox Name="CommentTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,50,20,0" Height="60" />

            <Button Content="Сохранить" Name="Save" HorizontalAlignment="Left" Margin="80,120,0,0" VerticalAlignment="Top" Width="100" Click="Save_Click" />
            <Button Content="Отмена" Name="Cancel" HorizontalAlignment="Right" Margin="0,120,80,0" VerticalAlignment="Top" Width="100" Click="Cancel_Click" />
        
        

    </Grid>
</Page>
